<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn"
    android:background="@drawable/adminpanelback">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:id="@+id/image_layout">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginLeft="105dp"
            android:background="@drawable/logo_eat_it"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/image_layout">
        <EditText
            android:id="@+id/signup_phone"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:alpha="0.9"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:textSize="20sp"
            android:background="@drawable/custom_design"
            android:hint="Type your phone number"
            android:textColorHint="@color/white"/>
        <EditText
            android:id="@+id/signup_user_name"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:alpha="0.9"
            android:textSize="20sp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:background="@drawable/custom_design"
            android:hint="Type your name"
            android:textColorHint="@color/white"/>
        <EditText
            android:id="@+id/signup_password"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:ems="10"
            android:alpha="0.9"
            android:inputType="textPassword"
            android:layout_marginLeft="17dp"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_design"
            android:padding="8dp"
            android:textSize="20sp"
            android:hint="Type your password"
            android:textColorHint="@color/white"/>
        <EditText
            android:id="@+id/signup_conf_pass"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:ems="10"
            android:alpha="0.9"
            android:inputType="textPassword"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_design"
            android:padding="8dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:hint="Confirm your password"
            android:textColorHint="@color/white"/>
        <Button
            android:id="@+id/signup_button"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Sign up"
            android:textAllCaps="false"
            android:alpha="0.9"
            android:textSize="20sp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/custom_design"
            android:textColor="@color/white"
            android:layout_marginLeft="30dp" />
        />
        <TextView
            android:id="@+id/singup_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="2dp"
            android:textSize="20sp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="5dp"
            android:text="Already have an account?sign in"
            android:textColor="@color/white"
          />
    </LinearLayout>
</RelativeLayout>