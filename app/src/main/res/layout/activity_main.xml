<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:background="@drawable/adminpanelback">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="140dp"
            android:src="@drawable/logo_eat_it"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/slogan"
            android:layout_gravity="center"
            android:layout_width="280dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:text="Ordering Food From Your Favourite Restaurants is Just a Click Away"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/signupbtn"
            android:layout_width="0dp"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#9539796b"
            android:textStyle="bold"
            android:alpha="0.9"
            android:textSize="20sp"
            />
        <Button
            android:id="@+id/signinbtn"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:text="Sign In"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#95A9d440"
            android:textSize="20sp"
            />
    </LinearLayout>
</RelativeLayout>